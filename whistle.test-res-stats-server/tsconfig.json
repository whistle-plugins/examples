{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ]
}
